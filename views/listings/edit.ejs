<% layout("/layouts/boilerplate")%>
<div class="row-8">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="listings/<%=listings._id%>?_method=PUT">
      <div class="mb-3">
        <label for="title" class="form-label">Title:-</label>
        <input
          name="listing[title]"
          value="<%= listings.title %>"
          type="text"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description:-</label>
        <textarea name="listing[description]" class="form-control">
<%= listings.description%></textarea
        >
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price:-</label>
        <input
          name="listing[price]"
          class="form-control"
          value="<%= listings.price %>"
          type="number"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image:-</label>
        <input
          name="listing[image]"
          value="<%= listings.image %>"
          type="text"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location:-</label>
        <input
          name="listing[location]"
          value="<%= listings.location %>"
          type="text"
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country:-</label>
        <input
          name="listing[country]"
          value="<%= listings.country %>"
          type="text"
          class="form-control"
        />
      </div>
      <br />
      <button class="btn btn-black add-btn">Edit</button>
    </form>
  </div>
</div>
